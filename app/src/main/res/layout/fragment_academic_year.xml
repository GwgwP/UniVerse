<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SubmitBthSecretary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AcademicYear.AcademicYearForm.AcademicYearFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic Year Management"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Select Academic year:"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@drawable/rounded_search_bar"
                android:padding="8dp"
                android:prompt="@string/arrayYear"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/add_year_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Year" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Select Semester:"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinnerSemester"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@drawable/rounded_search_bar"
                android:padding="8dp"
                android:prompt="@string/arrayYear"
                android:spinnerMode="dialog" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Insert  ECTS: "
                    android:textSize="24sp"
                    android:textStyle="italic" />


                <EditText

                    android:id="@+id/editTextText"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="enter ects here"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/ectsx_ac_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_delete" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Insert  start date: "
                android:textSize="24sp"
                android:textStyle="italic" />
            <EditText
                android:id="@+id/date_txt_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="202X-XX-XX"
                android:inputType="date" />
            <ImageView
                android:id="@+id/ac_year_date1X"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Insert  end date: "
                android:textSize="24sp"
                android:textStyle="italic" />
            <EditText
                android:id="@+id/date_txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="202X-XX-XX"
                android:inputType="date" />
            <ImageView
                android:id="@+id/ac_year_date2X"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button

                android:id="@+id/checkBtnSecretary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CHECK" />


            <Button
                android:layout_marginStart="200dp"
                android:id="@+id/submitBtnSecretary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Submit" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
